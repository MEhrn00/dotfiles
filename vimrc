" Syntax highlighting
syntax on

" Line numbers (number)
set nu

" Expand tab (expandtab)
set et

" Shift width (shiftwidth)
set sw=4

" Tab stop (tabstop)
set ts=4

" Smart indent (smartindent)
set si

" Auto indent (autoindent)
set ai

" Incremental search (incsearch)
set is

" Split right (splitright)
set spr

" Split below (splitbelow)
set sb

" Mouse support
set mouse=a

nnoremap <silent> <Leader>y "+y
nnoremap <silent> <Leader>] :bn<CR>
nnoremap <silent> <Leader>[ :bp<CR>
nnoremap <silent> <Leader>d :bd<CR>
nnoremap <silent> <Leader>; :ls<CR>
